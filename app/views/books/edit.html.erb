<h1>Editing Book</h1>
 
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <div>
    <%= f.submit 'Update Book' %>
    </div>
<% end %>

<table>
  <tbody>
  <td><%= link_to 'Show', @book, class: "bk" %></td>
  <td>|</td>
  <td><%= link_to 'Back', books_path, class: "bk" %></td>
  <tbody>
</table>