<div class="container">
  <div class="row">
    <div class ="col-md-3">
      <div class="profile-container">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <table class="table table-striped">
            <tbody>
              <tr>
                <td>name</td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td>introduction</td>
                <td><%= @user.introduction %></td>
              </tr>
            </tbody>
          </table>
           
          <div class="row">
            
              <p><%= link_to 'Edit', edit_user_path(@user.id) %></p>
          
          </div>
      </div>
      <h2>New books</h2>
    
      <%= form_for @user_book do |f| %>
       
          <%= f.label :title, 'Title' %></br>
          <%= f.text_field :title %>
       
          <%= f.label :body, 'Body' %>
          <%= f.text_area :body %></br>
      
          <%= f.submit 'Create Book',class: "btn btn-primary" %>
       
      <% end %>
    </div>
    
    <div class="col-md-9">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg"%></td>
               
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if current_user == @user %>
                <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %></td>
                <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
              <% end %>
            </tr>
            <td><%= link_to @book.user.name, user_path(@user.id) %></td>
        </tbody>
      </table>
    
    </div>
  </div>
</div>